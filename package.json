{
  "name": "missing-image-tool",
  "version": "1.0.1",
  "description": "B2C Commerce Missing Image Analyzer - Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.3",
    "node-fetch": "^2.7.0",
    "sax": "^1.3.0"
  },
  "build": {
    "appId": "com.missing-image-tool",
    "productName": "Missing Image Tool",
    "files": [
      "main.js",
      "preload.js",
      "app.html",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}

